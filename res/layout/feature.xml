<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feature_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:background="#000" >
        </ViewFlipper>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="5dip" >

                <TextView
                    android:id="@+id/feature_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:textColor="#ff003366"
                    android:textSize="15sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/feature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:textColor="#ff003366"
                    android:textSize="9sp"
                    android:textStyle="normal" >
                </TextView>

                <LinearLayout
                    android:id="@+id/image_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feature_button_next_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="188dp"
        android:layout_gravity="right|center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/feature_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:paddingBottom="25dp"
            android:src="@drawable/tsc_top_feature_btn_next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feature_button_prev_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="188dp"
        android:layout_gravity="left|center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/feature_button_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:paddingBottom="25dp"
            android:src="@drawable/tsc_top_feature_btn_prev" />
    </LinearLayout>

</FrameLayout>