<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ヘッダーボタンスタイル -->
    <style name="HeaderButton">
        <item name="android:background">@drawable/btn_header</item>
        <item name="android:textColor">#c3c6cd</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <!-- TOPメニューボタンスタイル -->
    <style name="MenuButton">
        <item name="android:background">@drawable/btn_menu</item>
        <item name="android:textColor">#003366</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="MenuButtonLarge" parent="@style/MenuButton">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MenuButtonLargeFirst" parent="@style/MenuButtonLarge">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="MenuButtonSmall" parent="@style/MenuButton">
        <item name="android:textSize">9sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="MenuButtonSmallFirst" parent="@style/MenuButtonSmall">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="MenuButtonWide" parent="@style/MenuButton">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">left|top</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MenuButtonFacebookSubText">
        <item name="android:textSize">7sp</item>
    </style>

    <style name="MenuButtonFacebookMainText">
        <item name="android:textSize">16sp</item>
    </style>

</resources>